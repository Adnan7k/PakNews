<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:background="@android:color/white"
    android:layout_height="wrap_content">

    <android.support.v7.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_margin="5dp"
        android:layout_alignParentStart="true">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="5dp">

            <ImageView
                android:id="@+id/picturePakistan"
                android:layout_width="50dp"
                android:layout_height="190dp"
                android:layout_marginLeft="5dp"
                android:layout_alignParentEnd="true"
                android:layout_alignParentStart="true"
                android:layout_alignParentTop="true" />


            <TextView
                android:id="@+id/titlePakistan"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="10dp"
                android:text="Result Title"
                android:textSize="17dp"
                android:textStyle="bold"
                android:layout_marginTop="14dp"
                android:layout_below="@+id/picturePakistan"
                android:layout_alignParentEnd="true" />

            <TextView
                android:id="@+id/descriptionPakistan"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="10dp"
                android:text="Description"
                android:textSize="15dp"
                android:layout_marginTop="10dp"
                android:layout_below="@+id/titlePakistan"
                android:layout_alignParentEnd="true" />

            <TextView
                android:id="@+id/datePakistan"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="7dp"
                android:layout_marginLeft="15dp"
                android:text="Result Date"
                android:layout_below="@id/descriptionPakistan" />


        </RelativeLayout>
    </android.support.v7.widget.CardView>
</RelativeLayout>