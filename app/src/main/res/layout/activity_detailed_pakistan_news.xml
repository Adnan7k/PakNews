<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="adnandanny.paknews.Activities.DetailedPakistanNews">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:layout_marginTop="0dp"
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <ImageView
                android:layout_marginTop="0dp"
                android:id="@+id/pictureStory"
                android:layout_width="match_parent"
                android:layout_height="230dp" />


            <TextView
                android:id="@+id/storytitleID"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Loading Title...."
                android:textStyle="bold"
                android:padding="5dp"
                android:layout_marginTop="5dp"
                android:textAlignment="center"
                android:textSize="19dp"
                />



            <TextView
                android:id="@+id/storyDeatils"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/pictureStory"
                android:text="Loading Story..."
                android:textSize="15dp"
                android:padding="15dp" />


        </LinearLayout>

    </ScrollView>


</RelativeLayout>
